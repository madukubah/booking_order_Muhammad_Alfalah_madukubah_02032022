<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="message_alert_form" model="ir.ui.view">
            <field name="name">message.alert.form</field>
            <field name="model">message.alert</field>
            <field name="arch" type="xml">
                <form >
                    <p class="text-center">
                        <field name="message"/>
                    </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/> 
                </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
